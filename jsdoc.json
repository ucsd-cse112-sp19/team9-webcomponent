{
    "source": {
        "include": ["./web_component"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-mermaid",
        "node_modules/better-docs/category"
    ],
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "tutorials": "./tutorials",
        "template": "node_modules/better-docs/"
    },
    "templates": {
        "default": {
         "staticFiles": {
            "include": [
                "./tutorials/images"
              ]
            }
          }
    }
}
